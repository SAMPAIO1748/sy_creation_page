<!DOCTYPE html>
<html lang="fr">
{% apply inline_css(source("style.css")) %}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('style.css') }}">
    <title>Liste articles</title>

</head>
<body>

<header>
    <p>Journal LA PISCINE</p>
</header>

<main>
    <div class="container">
        {% for article in list %}
            <div class="row">
                <article>
                    <center><h1> {{  article.title }} </h1></center>
                    <center><h2> {{  article.content }} </h2></center>
                </article>
            </div>

        {% endfor %}
    </div>
</main>

<footer>
    <p>Journal LA PISCINE</p>
</footer>


</body>
</html>
{% endapply %}